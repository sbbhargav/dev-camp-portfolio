<h1>Angular Portfolio items</h1>


<%= link_to "create New Item" , new_portfolio_path if logged_in?(:site_admin) %>

<% @portfolio_items.each do |portfolio_item| %>
	<p><%= link_to portfolio_item.title , portfolio_show_path(portfolio_item) %></p>
	<p><%= portfolio_item.subtitle%></p>
	<p><%= portfolio_item.body %></p>
	<%= image_tag portfolio_item.tumb_image unless portfolio_item.tumb_image.nil?%>
  <%= link_to "Edit Item" ,edit_portfolio_path(portfolio_item) if logged_in?(:site_admin) %>
	<%= link_to "Delete portfolio item", portfolio_path(portfolio_item), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } if logged_in?(:site_admin)%>
<% end %>